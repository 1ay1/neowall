# Staticwall Configuration - Shadertoy iChannel Examples
# This demonstrates how to configure iChannel textures for Shadertoy shaders

# Example 1: Using default procedural textures
outputs {
  eDP-1 {
    shader examples/shaders/heartfelt.glsl
    # Available default textures: rgba_noise, gray_noise, blue_noise, wood, abstract
    # Use "_" to skip a channel (leave empty)
    channels [
      rgba_noise
      gray_noise
      blue_noise
      wood
      abstract
    ]
  }
}

