#     channels [
#       "~/Pictures/texture1.png",
#       "~/Pictures/texture2.jpg",
#       "/absolute/path/to/texture3.png"
#     ]
#   }
# }


# Example 4: Skipping channels with "_" placeholder
# Use "_" to skip a channel you don't need
# output {
#   HDMI-A-1 {
#     shader custom.glsl
#     channels [
#       "_",              # iChannel0 not used (skipped)
#       "wood",           # iChannel1: wood texture
#       "_",              # iChannel2 not used (skipped)
#       "abstract"        # iChannel3: abstract texture
#     ]
#     # Your shader can use iChannel1 and iChannel3
#     # iChannel0 and iChannel2 will be empty/black
#   }
# }


# Example 5: Mixing named textures and image files
# output {
